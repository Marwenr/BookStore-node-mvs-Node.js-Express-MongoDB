<%- include('../partials/top') %>


  <!-- about section -->
  <section class="all_book_section layout_padding">
    <div class="container">
      <div class="heading_container d-flex justify-content-center">
        <h2>
          All Books
        </h2>
      </div>
      <div class="layout_padding2-top">
        <div class="row">
          <% for(let book of books) {%>
            <div class="col-md-4">
              <a href="/allbooks/<%= book._id %>">
                <div class="card mb-5 mx-auto" style="width: 18rem;">
                  <img src="/bookImg/<%= book.image %>" class="card-img-top" alt="...">
                  <div class="card-body">
                    <p class="card-text"><%= book.title %></p>
                  </div>
                </div>
              </a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </section>

  <!-- end about section -->


